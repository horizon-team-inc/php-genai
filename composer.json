{
    "name": "horizonllc/php-genai",
    "description": "A clean PHP wrapper for Google's GenAI API",
    "keywords": ["php", "genai", "google", "ai", "wrapper", "api"],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        },
        {
            "name": "Horizon LLC.",
            "email": "horizon.team.toronto@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "guzzlehttp/guzzle": "^7.8.0",
        "psr/http-client": "^1.0.3",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18.1",
        "pestphp/pest": "^3.5.1",
        "pestphp/pest-plugin-type-coverage": "^3.1",
        "phpstan/phpstan": "^1.12.7",
        "rector/rector": "^1.2.8",
        "symfony/var-dumper": "^7.1.6"
    },
    "autoload": {
        "psr-4": {
            "NunoMaduro\\SkeletonPhp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
